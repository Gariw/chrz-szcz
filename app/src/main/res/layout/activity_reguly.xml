<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#50a439"
    android:weightSum="1">


    <TextView
        android:text="Reguły pisowni"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_weight="0.17"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_marginTop="10dp" />

    <Button
        android:text="U/Ó"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:id="@+id/buttonU"
        android:layout_gravity="center_horizontal"
        android:background="#62b449"
        android:onClick="regulyU"/>

    <Button
        android:text="H/CH"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:id="@+id/buttonO"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_underline"
        android:onClick="regulyH"/>

    <Button
        android:text="Ż/RZ"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:id="@+id/buttonH"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_underline"
        android:onClick="regulyZ"/>



    <Button
        android:text="Powrót"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:id="@+id/regulyPowrot"
        android:layout_weight="0.16"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_underline"
        android:onClick="finito"/>
</LinearLayout>